<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorBG"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dragImage"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/StringValue"
        app:srcCompat="@drawable/ic_baseline_menu_24" />


    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/plrel_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:contentDescription="@string/StringValue" />

        <TextView
            android:id="@+id/plrel_dur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="TextView"
            android:textColor="@color/colorBasicText" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plrel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="@color/colorBasicText" />

        <TextView
            android:id="@+id/plrel_vid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="@color/colorBasicText" />

        <TextView
            android:id="@+id/plrel_pid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="@color/colorBasicText" />

    </LinearLayout>
</LinearLayout>

